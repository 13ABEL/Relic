<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.text.Html"/>
        <variable
            name="commentModel"
            type="com.relic.data.models.CommentModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commentitem_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`` + commentModel.score}"/>

        <TextView
            android:id="@+id/commentitem_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/commentitem_score"
            android:text="@{commentModel.author}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{commentModel.created}"
            android:layout_toEndOf="@+id/commentitem_author"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentitem_author"
            android:text="@{Html.fromHtml(Html.fromHtml(commentModel.body).toString()).toString()}"/>

    </RelativeLayout>

</layout>