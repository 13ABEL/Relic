<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/relicBackgroundColor"
    android:id="@+id/subSearchRoot">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/subSearchAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/subSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_m">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/subSearch"
                app:iconifiedByDefault="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/relicBackgroundColor"
                app:queryBackground="@android:color/transparent"
                app:queryHint="@string/search_sub"/>

        </androidx.cardview.widget.CardView>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subSearchAppBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/padding_m"
        android:paddingEnd="@dimen/padding_m">

        <TextView
            android:id="@+id/localSubsTitle"
            android:text="@string/local_search_results"
            android:textSize="@dimen/title_size_m"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/padding_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/localSubsResultSize"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/localSubsResultSize"
            android:textSize="@dimen/title_size_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_l"
            android:layout_marginStart="@dimen/padding_l"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/localSubsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="20 results"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/localSubResultsRV"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_xs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/localSubsTitle"
            app:layout_constraintBottom_toTopOf="@id/onlineSubsTitle"/>

        <TextView
            android:id="@+id/onlineSubsTitle"
            android:text="@string/online_search_results"
            android:textSize="@dimen/title_size_m"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_l"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/localSubResultsRV"
            app:layout_constraintBottom_toTopOf="@id/searchSubResultsRV"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchSubResultsRV"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_xs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/onlineSubsTitle"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>