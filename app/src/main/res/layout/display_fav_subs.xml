<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_xs"
    android:paddingBottom="@dimen/padding_xs">

    <TextView
        android:id="@+id/favSubsCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_l"
        android:padding="@dimen/padding_m"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favSubsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/favSubsCountTextView"
        android:padding="@dimen/padding_xs"
        android:clipToPadding="false"
        android:orientation="horizontal"/>

</RelativeLayout>