<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSecondary"
    android:layout_marginTop="@dimen/postitem_margin"
    android:paddingTop="@dimen/padding_s"
    android:paddingBottom="@dimen/padding_m"
    android:paddingStart="@dimen/padding_m"
    android:paddingEnd="@dimen/padding_m">

    <!-- top row of values -->
    <TextView
        android:id="@+id/postSubNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_s"
        android:layout_marginEnd="@dimen/title_margin"/>

    <TextView
        android:id="@+id/postDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/postSubNameView"
        android:textSize="@dimen/text_s"/>

    <ImageView
        android:id="@+id/savedPostIconView"
        android:layout_width="@dimen/ic_width_s"
        android:layout_height="@dimen/ic_height_s"
        android:src="@drawable/ic_save"
        android:visibility="gone"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/pinnedIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/postitem_saved"
        android:src="@drawable/ic_pinned"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/padding_s"/>

    <LinearLayout
        android:id="@+id/titleGroupView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postSubNameView"
        android:layout_marginBottom="@dimen/padding_m">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/titleView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/padding_xs"
                android:textSize="@dimen/text_l"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/postitem_nsfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/postitem_title"
                android:textColor="@color/warning"
                android:textAllCaps="true"
                android:visibility="gone"
                android:text="@string/nsfw"/>

            <TextView
                android:id="@+id/secondaryMetaTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleView"
                android:background="@drawable/tag"
                android:textSize="@dimen/text_m2"
                android:textColor="@color/negative_text"
                android:visibility="gone"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_xs"
            android:layout_marginStart="@dimen/postitem_selftext_margin"
            app:cardCornerRadius="2dp">

            <ImageView
                android:id="@+id/postThumbnailView"
                android:layout_width="@dimen/postitem_image_width"
                android:layout_height="@dimen/postitem_image_width"
                android:visibility="gone"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/postBodyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleGroupView"
        android:layout_marginBottom="@dimen/padding_m"
        android:textSize="@dimen/text_m"
        android:visibility="gone"
        android:maxLines="3"
        android:ellipsize="end"/>

    <!-- buttons and options -->
    <ImageView
        android:id="@+id/postUpvoteView"
        android:layout_width="@dimen/ic_width_s"
        android:layout_height="@dimen/ic_height_s"
        android:layout_below="@id/postBodyView"
        android:layout_marginEnd="@dimen/padding_m"
        android:src="@drawable/ic_upvote"/>

    <TextView
        android:id="@+id/postScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postBodyView"
        android:layout_toRightOf="@id/postUpvoteView"
        android:layout_marginEnd="@dimen/padding_m"/>

    <ImageView
        android:id="@+id/postDownvoteView"
        android:layout_width="@dimen/ic_width_s"
        android:layout_height="@dimen/ic_height_s"
        android:layout_below="@id/postBodyView"
        android:layout_toRightOf="@id/postScore"
        android:layout_marginEnd="@dimen/padding_m"
        android:src="@drawable/ic_downvote"/>

    <ImageView
        android:id="@+id/postCommentView"
        android:layout_width="@dimen/ic_width_s"
        android:layout_height="@dimen/ic_height_s"
        android:layout_below="@id/postBodyView"
        android:layout_toRightOf="@id/postDownvoteView"
        android:layout_marginEnd="@dimen/padding_m"
        android:src="@drawable/ic_comment"/>

    <TextView
        android:id="@+id/postCommentCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postBodyView"
        android:layout_toRightOf="@id/postCommentView"/>

</RelativeLayout>

