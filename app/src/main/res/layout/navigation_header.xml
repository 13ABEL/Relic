<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:padding="@dimen/padding_l"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_l"
        android:textStyle="bold"
        android:textSize="@dimen/text_l"
        android:text="@string/log_in"
        tools:text="u/boiledbuns"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linkKarma"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:text="Link Karma: 400"
        android:id="@+id/linkKarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Link Karma: 400"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintBottom_toTopOf="@id/commentKarma"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:text="Comment Karma: 20"
        android:id="@+id/commentKarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Comment Karma: 20"
        app:layout_constraintTop_toBottomOf="@id/linkKarma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>