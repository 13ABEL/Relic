<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/preferencesThemeToolbarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        app:title="@string/preference_theme"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="?attr/relicTitleColor"
        app:navigationIcon="?attr/homeAsUpIndicator">

        <Spinner
            android:id="@+id/selectThemeSpinnerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/previewPostFrameView"
        app:layout_constraintTop_toBottomOf="@id/preferencesThemeToolbarView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"/>

</android.support.constraint.ConstraintLayout>