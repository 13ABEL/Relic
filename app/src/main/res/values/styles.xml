<resources>

    <style name="RelicBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- add specific attrs here -->
        <item name="actionBarSize">@dimen/toolbar_height</item>
    </style>

    <!-- REGION THEMES -->
    <style name="RelicThemePrimary" parent="RelicBaseTheme">
        <item name="colorPrimary">@color/backgroundSecondary</item>
        <item name="colorAccent">@color/paleGray</item>
        <item name="relicBackgroundColor">@color/paleDarkGray</item>
        <item name="relicBackgroundColorB">@color/backgroundSecondaryB</item>

        <item name="android:textColor">@color/paleGray</item>
        <item name="android:navigationBarColor">@color/paleDarkGray</item>

        <item name="relicStickiedColor">@color/stickied</item>
        <item name="relicTitleColor">@color/white</item>
    </style>

    <style name="RelicThemeLight" parent="RelicBaseTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/paleDarkGray</item>
        <item name="relicBackgroundColor">@color/paleGray</item>
        <item name="relicBackgroundColorB">@color/almostWhite</item>

        <item name="android:textColor">@color/paleBlueGray</item>
        <item name="relicStickiedColor">@color/stickied</item>
        <item name="relicTitleColor">@color/darkGray</item>
    </style>

    <style name="ThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/backgroundSecondary</item>
        <item name="android:textColor">@color/paleDarkGray</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundSecondary</item>
        <item name="colorPrimaryDark">@color/backgroundSecondary</item>
        <item name="colorAccent">@color/paleDarkGray</item>
    </style>

    <!-- ENDREGION THEMES -->

    <style name="RelicCard" parent="CardView.Dark">
        <!--<item name="cardBackgroundColor">@color/darkGray</item>
        <item name="android:colorAccent">@color/paleDarkGray</item>-->
        <item name="cardBackgroundColor">@color/paleBlueGray</item>
        <item name="android:colorAccent">@color/paleGray</item>
    </style>


    <style name="ItemTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/paleDarkGray</item>
        <item name="android:textColorPrimary">@color/mainFont</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <style name="RelicChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/paleGray</item>
        <item name="android:textColorPrimary">@color/paleGray</item>

    </style>


    <style name="PrimaryText">
        <item name="android:colorPrimary">@color/mainFont</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat.Title">
        <item name="android:colorPrimary">@color/lightGray</item>
    </style>

    <style name="titleChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:labelTextSize">@dimen/toolbar_h1</item>
    </style>

    <style name="collapsingTitleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/relicTitleColor</item>
    </style>

    <style name="FullScreenDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
