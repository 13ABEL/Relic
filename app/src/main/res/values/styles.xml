<resources>
    <!-- REGION THEMES -->
    <style name="RelicThemePrimary" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/backgroundSecondary</item>
        <item name="android:windowBackground">@color/paleDarkGray</item>
        <item name="android:textColor">@color/paleGray</item>
    </style>

    <style name="RelicThemeLight" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/paleGray</item>
        <item name="android:windowBackground">@color/paleGray</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="ThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/backgroundSecondary</item>
        <item name="android:textColor">@color/paleDarkGray</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundSecondary</item>
        <item name="colorPrimaryDark">@color/backgroundSecondary</item>
        <item name="colorAccent">@color/paleDarkGray</item>
    </style>

    <!-- ENDREGION THEMES -->

    <style name="RelicCard" parent="CardView.Dark">
        <!--<item name="cardBackgroundColor">@color/darkGray</item>
        <item name="android:colorAccent">@color/paleDarkGray</item>-->
        <item name="cardBackgroundColor">@color/paleBlueGray</item>
        <item name="android:colorAccent">@color/paleGray</item>
    </style>


    <style name="ItemTheme">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/paleDarkGray</item>
        <item name="android:textColorPrimary">@color/mainFont</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
    </style>

    <style name="RelicChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/paleGray</item>
        <item name="android:textColorPrimary">@color/paleGray</item>

    </style>


    <style name="PrimaryText">
        <item name="android:colorPrimary">@color/mainFont</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat.Title">
        <item name="android:colorPrimary">@color/lightGray</item>
    </style>

    <style name="titleChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:labelTextSize">@dimen/toolbar_h1</item>
    </style>

    <style name="collapsingTitleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
    </style>

</resources>
