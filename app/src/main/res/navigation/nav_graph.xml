<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nag_graph"
    app:startDestination="@id/placeholderFragment">

    <fragment
        android:id="@+id/placeholderFragment"
        android:name="com.relic.presentation.main.PlaceholderFragment"
        android:label="PlaceholderFragment" >
        <action
            android:id="@+id/action_placeholderFragment_to_displayUserFragment"
            app:destination="@id/displayUserFragment" />
        <action
            android:id="@+id/action_placeholderFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_placeholderFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_placeholderFragment_to_displaySubsFragment"
            app:destination="@id/displaySubsFragment" />
        <action
            android:id="@+id/action_placeholderFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_placeholderFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayUserFragment"
        android:name="com.relic.presentation.displayuser.DisplayUserFragment"
        android:label="DisplayUserFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.relic.presentation.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.relic.presentation.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.relic.presentation.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_displayPostFragment"
            app:destination="@id/displayPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/displaySubsFragment"
        android:name="com.relic.presentation.displaysubs.DisplaySubsFragment"
        android:label="DisplaySubsFragment" >
        <action
            android:id="@+id/action_displaySubsFragment_to_frontpageFragment"
            app:destination="@id/frontpageFragment" />
        <action
            android:id="@+id/action_displaySubsFragment_to_displaySubFragment"
            app:destination="@id/displaySubFragment"/>
    </fragment>
    <fragment
        android:id="@+id/displayPostFragment"
        android:name="com.relic.presentation.displaypost.DisplayPostFragment"
        android:label="DisplayPostFragment">
        <argument
            android:name="postFullName"
            app:argType="string" />
        <argument
            android:name="subredditName"
            app:argType="string" />
        <argument
            android:name="enableVisitSub"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_displayPostFragment_to_displaySubFragment"
            app:destination="@id/displaySubFragment" />
    </fragment>
    <fragment
        android:id="@+id/frontpageFragment"
        android:name="com.relic.presentation.home.frontpage.FrontpageFragment"
        android:label="FrontpageFragment" >
        <action
            android:id="@+id/action_frontpageFragment_to_displayPostFragment"
            app:destination="@id/displayPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/displaySubFragment"
        android:name="com.relic.presentation.displaysub.DisplaySubFragment"
        android:label="DisplaySubFragment" >
        <argument
            android:name="subName"
            app:argType="string" />
        <action
            android:id="@+id/action_displaySubFragment_to_displayPostFragment"
            app:destination="@id/displayPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.relic.presentation.login.LoginFragment"
        android:label="LoginFragment" />
</navigation>